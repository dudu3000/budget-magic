html 
    head 
        title= title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    body
        .container.mt-5
            h1= message
            br
            br
            form(action="/submit" method="post")
                div.form-floating.mb-3   
                    select#dropdown(name="dropdown" class="form-select" required)
                        option(value="Venituri") Venituri
                        option(value="Cheltuieli" selected) Cheltuieli
                    label(for="dropdown") Categoria
                br
                br
                div.form-floating.mb-3   
                    select#dropdown(name="name" class="form-select" required)
                        option(value="Dudu" selected) Dudu
                        option(value="Paula") Paula
                    label(for="dropdown") Nume
                br
                br
                div.input-group.mb-3
                    span.input-group-text RON
                    input.form-control(type="number", name="ammount", placeholder="Suma", value="0")
                br
                br
                div.input-group.mb-3
                    span.input-group-text Motiv
                    input.form-control(type="text", name="reason", placeholder="Motiv")
                br
                br
                input.btn-check(type="radio", name="isMandatory", id="danger-outlined", autocomplete="off", value="off")
                label.btn.btn-outline-danger(for="danger-outlined") NU este esential!
                span  | 
                input.btn-check(type="radio", name="isMandatory", id="success-outlined", autocomplete="off", value="on")
                label.btn.btn-outline-success(for="success-outlined") Este esential!
                br
                br
                input.btn-check(type="radio", name="isInvestment", id="primary-outlined", autocomplete="off", value="on")
                label.btn.btn-outline-success(for="primary-outlined") Este Investitie
                span  | 
                input.btn-check(type="radio", name="isInvestment", id="secondary-outlined", autocomplete="off",, value="off")
                label.btn.btn-outline-danger(for="secondary-outlined") NU este investitie
                br
                br
                div.input-group.mb-3
                    span.input-group-text ROI %
                    input.form-control(type="number", name="investmentReturn", placeholder="ROI", min="0", max="100", value="0", required)
                br
                br
                // Submit button
                button.btn.btn-primary(type="submit") Adauga
            br
            br
            table.table.table-striped
                tr 
                    th Nume 
                    th Tip
                    th Suma
                    th Este esential
                    th Motiv
                    th Este investitie
                    th Randament estimat
                each val in tableValues
                    tr
                        td= val.name
                        td= val.type
                        td= val.ammount
                        td= val.is_mandatory
                        td= val.reason
                        td= val.is_investment
                        td= val.investment_return_percentage
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous")
